{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>gucio1200/renovate-config",
    "github>gucio1200/renovate-config:automerge-github-actions",
    "github>gucio1200/renovate_sandbox//.github/renovate/allowedVersions.json5",
    "github>gucio1200/renovate_sandbox//.github/renovate/autoMerge.json5",
    "github>gucio1200/renovate_sandbox//.github/renovate/versioning.json5",
    "github>gucio1200/renovate_sandbox//.github/renovate/groups.json5",
    "github>gucio1200/renovate_sandbox//.github/renovate/clusters.json5",
    "github>gucio1200/renovate_sandbox//.github/renovate/grafanaDashboards.json5",
    "github>gucio1200/renovate_sandbox//.github/renovate/custom-managers.json5"
  ],
  "flux": {
    "fileMatch": [".+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": [".+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": [".+\\.ya?ml$"]
  },
  "customDatasources": {
    "aks-versions": {
      "format": "json",
      "transformTemplates": ["$"]
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [".+\\.tf$"],
      "matchStrings": [
        "# renovate:\\s*depName=(?<packageName>[^\\s]+)\\s*datasource=(?<datasource>[^\\s]+)(?:\\s*registryUrl=(?<registryUrl>[^\\s]+))?\\s*\\n\\s*(?<depName>\\w+)\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "{{packageName}}",
      "datasourceTemplate": "{{datasource}}",
      "versioningTemplate": "semver",
      "registryUrlTemplate": "{{registryUrl}}"
    }
  ]
}
